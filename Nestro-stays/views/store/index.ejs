<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-rose-100 via-white to-rose-50 min-h-screen flex flex-col font-['Segoe_UI']">

  <%- include('../partials/nav') %>

  <main class="flex-grow container mx-auto px-4 py-10">
    <div class="bg-white shadow-[0_25px_60px_-15px_rgba(0,0,0,0.1)] rounded-3xl px-8 py-10 max-w-7xl mx-auto border border-gray-100">
      
      <!-- Title -->
      <h2 class="text-4xl font-extrabold text-center text-rose-600 mb-10 tracking-wide">
        Explore stays on <span class="text-gray-800">Nestro</span>
      </h2>

      <!-- Home Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 border border-gray-100">
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

            <div class="p-5">
              <!-- Title -->
              <h3 class="text-xl font-semibold text-gray-800 mb-1 tracking-tight"><%= home.houseName %></h3>
              
              <!-- Location -->
              <p class="text-gray-500 text-sm mb-3 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-rose-400"></i>
                <%= home.location %>
              </p>

              <!-- Price + Rating -->
              <div class="flex justify-between items-center mb-4">
                <span class="text-rose-500 font-bold text-lg">â‚¹<%= home.price %>/night</span>
                
                <div class="flex items-center text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700"><%= home.rating %></span>
                </div>
              </div>

              <!-- Book Button -->
              <a href="/book/<%= home._id %>" class="block w-full bg-rose-500 hover:bg-rose-600 text-white text-center py-2 rounded-lg font-semibold text-sm transition-transform transform hover:-translate-y-0.5 shadow">
                Book Now
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </main>

</body>
</html>
