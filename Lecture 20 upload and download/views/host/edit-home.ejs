<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="form-page">
    <div class="form-box">
      <h1 class="form-heading">
        <%= editing ? "Edit Your Home" : "List Your Home on Nestro" %>
      </h1>

      <form
        action="/host/<%= editing ? 'edit-home' : 'add-home' %>"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-6"
      >
        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />

        <!-- House Name -->
        <div>
          <label class="block text-gray-700 mb-1 font-medium">House Name</label>
          <input
            type="text"
            name="houseName"
            value="<%= editing ? home.houseName : '' %>"
            placeholder="Enter your house name"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500"
            required
          />
        </div>

        <!-- Price Per Night -->
        <div>
          <label class="block text-gray-700 mb-1 font-medium">Price Per Night</label>
          <input
            type="text"
            name="price"
            value="<%= editing ? home.price : '' %>"
            placeholder="Enter price"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500"
            required
          />
        </div>

        <!-- Location -->
        <div>
          <label class="block text-gray-700 mb-1 font-medium">Location</label>
          <input
            type="text"
            name="location"
            value="<%= editing ? home.location : '' %>"
            placeholder="City, State"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500"
            required
          />
        </div>

        <!-- Rating -->
        <div>
          <label class="block text-gray-700 mb-1 font-medium">Rating</label>
          <input
            type="text"
            name="rating"
            value="<%= editing ? home.rating : '' %>"
            placeholder="Rate from 1 to 5"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500"
          />
        </div>

        <!-- Photo Upload -->
        <div>
          <label class="block text-gray-700 mb-1 font-medium">Photo</label>
          <input
            type="file"
            name="photo"
            accept="image/jpg,image/jpeg,image/png"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500"
            <%= editing ? "" : "required" %>
          />
        </div>

        <!-- Description -->
        <div>
          <label class="block text-gray-700 mb-1 font-medium">Description</label>
          <textarea
            name="discription"
            placeholder="Describe your home"
            rows="4"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500"
            required
          ><%= editing ? home.discription : '' %></textarea>
        </div>

        <!-- Submit Button -->
        <div>
          <input
            type="submit"
            value="<%= editing ? 'Update Home' : 'Add Home' %>"
            class="w-full bg-rose-500 text-white py-3 font-semibold rounded-md hover:bg-rose-600 transition duration-300"
          />
        </div>
      </form>
    </div>
  </main>
</body>
</html>
