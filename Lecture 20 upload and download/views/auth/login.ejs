<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-rose-100 via-white to-rose-50 min-h-screen flex flex-col font-['Segoe_UI']">

  <%- include('../partials/nav') %>

  <main class="flex-grow flex items-center justify-center px-4 py-10">
    <div class="relative w-full max-w-md bg-white shadow-[0_25px_60px_-15px_rgba(0,0,0,0.2)] rounded-3xl px-10 py-12 border border-gray-100 overflow-hidden login-container">

      <!-- Decorative circles -->
      <div class="absolute -top-10 -left-10 w-36 h-36 bg-rose-100 rounded-full opacity-20 blur-2xl"></div>
      <div class="absolute -bottom-10 -right-10 w-36 h-36 bg-yellow-100 rounded-full opacity-20 blur-2xl"></div>

      <!-- Brand Title -->
      <h2 class="text-3xl font-extrabold text-center text-rose-600 mb-1 tracking-widest">Welcome to Nestro</h2>
      <p class="text-center text-sm text-gray-500 mb-8">Login to continue exploring unique stays & experiences</p>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-6 relative z-10">
        <%- include('../partials/errors') %>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="e.g. you@nestro.com"
            value="<%= oldInput.email ? oldInput.email : '' %>"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none text-sm shadow-sm"
            required
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none text-sm shadow-sm"
            required
          />
        </div>

        <!-- Submit -->
        <div>
          <button
            type="submit"
            class="w-full bg-rose-500 hover:bg-rose-600 text-white py-2.5 rounded-lg font-semibold text-sm tracking-wide transition-transform transform hover:-translate-y-0.5 shadow-md"
          >
            Sign In
          </button>
        </div>

        <!-- Register Link -->
        <p class="text-center text-sm text-gray-500 mt-4">
          New here?
          <a href="/register" class="text-rose-500 hover:underline font-medium">Create an account</a>
        </p>
      </form>
    </div>
  </main>

</body>
</html>
