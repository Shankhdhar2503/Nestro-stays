<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-rose-500 font-bold text-center mb-8">
      Explore Our Registered Homes
    </h2>

    <% if (registeredHomes.length === 0) { %>
      <p class="text-center text-gray-600 text-lg">No homes registered yet. Please check back later.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300">
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-3">
                <i class="fas fa-map-marker-alt text-rose-500 mr-1"></i><%= home.location %>
              </p>

              <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-bold text-rose-500">â‚¹<%= home.price %> / night</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700"><%= home.rating %></span>
                </div>
              </div>

              <div class="flex justify-between items-center">
                <a href="/homes/<%= home._id %>" class="bg-rose-500 text-white py-2 px-4 rounded hover:bg-rose-600 transition">
                  View Details
                </a>

                <!-- Favorite button partial -->
                <%- include('../partials/favourite', { home }) %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
